<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" prefHeight="480.0" prefWidth="640.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.game.book.shelton.controller.GameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TextArea fx:id="chapterText" editable="false" style="-fx-background-color: none;" wrapText="true" VBox.vgrow="ALWAYS" />
   <VBox alignment="CENTER_LEFT">
      <VBox.margin>
         <Insets/>
      </VBox.margin>
      <HBox alignment="CENTER_LEFT" minHeight="0.0">
         <Label fx:id="textLink1" maxHeight="0.0" minHeight="0.0" visible="false">
            <HBox.margin>
               <Insets right="10.0"/>
            </HBox.margin>
         </Label>
         <Button fx:id="link1" maxHeight="0.0" minHeight="0.0" onAction="#onButtonClick" visible="false"/>
      </HBox>
      <HBox alignment="CENTER_LEFT" minHeight="0.0">
         <Label fx:id="textLink2" maxHeight="0.0" minHeight="0.0" visible="false">
            <HBox.margin>
               <Insets right="10.0"/>
            </HBox.margin>
         </Label>
         <Button fx:id="link2" maxHeight="0.0" minHeight="0.0" onAction="#onButtonClick" visible="false"/>
      </HBox>
      <HBox alignment="CENTER_LEFT" minHeight="0.0">
         <Label fx:id="textLink3" maxHeight="0.0" minHeight="0.0" visible="false">
            <HBox.margin>
               <Insets right="10.0"/>
            </HBox.margin>
         </Label>
         <Button fx:id="link3" maxHeight="0.0" minHeight="0.0" onAction="#onButtonClick" visible="false"/>
      </HBox>
   </VBox>
   <HBox alignment="CENTER_LEFT">
      <Label fx:id="chapterNumber" disable="true" text="0">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </Label>
      <Label text="Мастерство:">
         <HBox.margin>
            <Insets right="5.0" />
         </HBox.margin>
      </Label>
      <Label fx:id="mastery" text="0/0">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </Label>
      <Label text="Выносливость:">
         <HBox.margin>
            <Insets right="5.0" />
         </HBox.margin>
      </Label>
      <Label fx:id="stamina" text="0/0">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </Label>
      <Label text="Удача:">
         <HBox.margin>
            <Insets right="5.0" />
         </HBox.margin>
      </Label>
      <Label fx:id="luck" text="0/0">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </Label>
      <Label text="Деньги:">
         <HBox.margin>
            <Insets right="5.0" />
         </HBox.margin>
      </Label>
      <Label fx:id="money" text="0">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </Label>
      <Label text="Еда:">
         <HBox.margin>
            <Insets right="5.0" />
         </HBox.margin>
      </Label>
      <Label fx:id="food" text="0">
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </Label>
      <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
         <Button fx:id="infoButton" mnemonicParsing="false" text="Info">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="startButton" onAction="#onStartButtonClick" text="Start!" textAlignment="CENTER" />
      </HBox>
   </HBox>
</VBox>
