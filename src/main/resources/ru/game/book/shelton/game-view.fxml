<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="640.0" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="ru.game.book.shelton.GameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TextArea fx:id="chapterText" editable="false" style="-fx-background-color: none;" wrapText="true" VBox.vgrow="ALWAYS" />
   <HBox alignment="CENTER_LEFT" minHeight="0.0">
      <children>
          <Label fx:id="textLink1" maxHeight="0.0" minHeight="0.0" visible="false" />
         <HBox prefWidth="10.0" />
          <Button fx:id="link1" maxHeight="0.0" minHeight="0.0" onAction="#onButtonClick" visible="false" />
      </children>
   </HBox>
   <HBox alignment="CENTER_LEFT" minHeight="0.0">
      <children>
          <Label fx:id="textLink2" maxHeight="0.0" minHeight="0.0" visible="false" />
         <HBox prefWidth="10.0" />
          <Button fx:id="link2" maxHeight="0.0" minHeight="0.0" onAction="#onButtonClick" visible="false" />
      </children>
   </HBox>
   <HBox alignment="CENTER_LEFT" minHeight="0.0">
      <children>
          <Label fx:id="textLink3" maxHeight="0.0" minHeight="0.0" visible="false" />
         <HBox prefWidth="10.0" />
          <Button fx:id="link3" maxHeight="0.0" minHeight="0.0" onAction="#onButtonClick" visible="false" />
      </children>
   </HBox>
   <HBox>
      <children>
      
          <Label fx:id="chapterNumber" disable="true" />
         <HBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
            <children>
                <Button fx:id="startButton" onAction="#onStartButtonClick" text="Start!" textAlignment="CENTER" />
            </children>
         </HBox>
      </children>
   </HBox>
</VBox>
